<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/forgot.css" />
    </environment>


</head>
<body>

    @model ForgotPasswordViewModel
    @{
        ViewData["Title"] = "Esqueceu a palavra-passe?";
    }

    <h2>@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal">
        <h4>Insira o seu email.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="main">
            <div class="form-group">
                <input asp-for="Email" type="text" class="form-control" placeholder="Email" autofocus />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">SUBMETER</button>
                </div>
            </div>
        </div>
    </form>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
</body>
</html>